<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bottom_dialog_exceptions_period_button_cancel"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="15sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_activity_taskgui_att"
        android:text="@string/dialog_button_negative"/>
    <TextView
        android:id="@+id/bottom_dialog_exceptions_period_button_confirm"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="15sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_activity_taskgui_att"
        android:text="@string/dialog_button_positive"/>
    <TextView
        android:id="@+id/bottom_dialog_exceptions_period_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:textColor="#000000"/>
    <CheckBox
        android:id="@+id/bottom_dialog_exceptions_period_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_dialog_exceptions_period_title"
        android:layout_centerHorizontal="true"
        android:text="@string/enabled"/>
    <LinearLayout
        android:id="@+id/bottom_dialog_exceptions_period_selections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_dialog_exceptions_period_enabled"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/bottom_dialog_exceptions_period_start_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/bottom_dialog_exceptions_period_start_time_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/drawable_arrow_right_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_dialog_exceptions_period_start_time_att"
                android:layout_toRightOf="@+id/bottom_dialog_exceptions_period_start_time_arrow"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="@string/dialog_period_start_time"/>
            <TextView
                android:id="@+id/bottom_dialog_exceptions_period_start_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:text="13:00"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_dividing_line"/>
        <RelativeLayout
            android:id="@+id/bottom_dialog_exceptions_period_end_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/bottom_dialog_exceptions_period_end_time_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/drawable_arrow_right_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_dialog_exceptions_period_end_time_att"
                android:layout_toRightOf="@+id/bottom_dialog_exceptions_period_end_time_arrow"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="@string/dialog_period_end_time"/>
            <TextView
                android:id="@+id/bottom_dialog_exceptions_period_end_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:text="18:00"/>

        </RelativeLayout>
    </LinearLayout>

    <com.github.ghmxr.timeswitch.ui.CustomTimePicker
        android:id="@+id/bottom_dialog_exceptions_period_timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@android:style/Theme.Holo.Light"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@+id/bottom_dialog_exceptions_period_selections"/>

</RelativeLayout>