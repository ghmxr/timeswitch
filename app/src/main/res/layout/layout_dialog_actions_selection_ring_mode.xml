<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"     
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
     
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:background="#ffffff">
    
    	<RelativeLayout 
        	android:id="@+id/selection_ring_area_vibrate"
        	android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:clickable="true"
        	android:background="?android:attr/selectableItemBackground">        	    	    
    	    <ImageView 
    	        android:id="@+id/selection_ring_area_vibrate_icon"
    	        android:layout_width="25dp"
    	        android:layout_height="25dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="25dp"
    	        android:src="@drawable/icon_ring_vibrate"/>    	    
    	    <TextView 
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toRightOf="@+id/selection_ring_area_vibrate_icon"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="10dp"
    	        android:textSize="14sp"
    	        android:text="@string/ring_vibrate"/>
        	<RadioButton 
        	    android:id="@+id/selection_ring_area_vibrate_rb"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:clickable="false"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="25dp"/>       	
        	<ImageView 
        	    android:layout_width="match_parent"
        	    android:layout_height="1px"
        	    android:layout_marginLeft="25dp"
        	    android:layout_alignParentBottom="true"
        	    android:background="#dddddd"/>        	        
    	</RelativeLayout>
    	
    	<RelativeLayout 
        	android:id="@+id/selection_ring_area_off"
        	android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:clickable="true"
        	android:background="?android:attr/selectableItemBackground">        	    	    
    	    <ImageView 
    	        android:id="@+id/selection_ring_area_off_icon"
    	        android:layout_width="25dp"
    	        android:layout_height="25dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="25dp"
    	        android:src="@drawable/icon_ring_off"/>    	    
    	    <TextView 
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toRightOf="@+id/selection_ring_area_off_icon"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="10dp"
    	        android:textSize="14sp"
    	        android:text="@string/ring_silent"/>
        	<RadioButton 
        	    android:id="@+id/selection_ring_area_off_rb"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:clickable="false"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="25dp"/>       	
        	<ImageView 
        	    android:layout_width="match_parent"
        	    android:layout_height="1px"
        	    android:layout_marginLeft="25dp"
        	    android:layout_alignParentBottom="true"
        	    android:background="#dddddd"/>        	        
    	</RelativeLayout>
    	
    	<RelativeLayout 
        	android:id="@+id/selection_ring_area_normal"
        	android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:clickable="true"
        	android:background="?android:attr/selectableItemBackground">        	    	    
    	    <ImageView 
    	        android:id="@+id/selection_ring_area_normal_icon"
    	        android:layout_width="25dp"
    	        android:layout_height="25dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="25dp"
    	        android:src="@drawable/icon_ring_normal"/>    	    
    	    <TextView 
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toRightOf="@+id/selection_ring_area_normal_icon"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="10dp"
    	        android:textSize="14sp"
    	        android:text="@string/ring_normal"/>
        	<RadioButton 
        	    android:id="@+id/selection_ring_area_normal_rb"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:clickable="false"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="25dp"/>       	
        	<ImageView 
        	    android:layout_width="match_parent"
        	    android:layout_height="1px"
        	    android:layout_marginLeft="25dp"
        	    android:layout_alignParentBottom="true"
        	    android:background="#dddddd"/>        	        
    	</RelativeLayout>
    	
    	<RelativeLayout 
        	android:id="@+id/selection_ring_area_unselected"
        	android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:clickable="true"
        	android:background="?android:attr/selectableItemBackground">        	    	    
    	    <ImageView 
    	        android:id="@+id/selection_ring_area_unselected_icon"
    	        android:layout_width="25dp"
    	        android:layout_height="25dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="25dp"
    	        android:src="@drawable/icon_unselected"/>    	    
    	    <TextView 
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toRightOf="@+id/selection_ring_area_unselected_icon"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="10dp"
    	        android:textSize="14sp"
    	        android:text="@string/unselected"/>
        	<RadioButton 
        	    android:id="@+id/selection_ring_area_unselected_rb"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:clickable="false"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="25dp"/>       	        	     	        
    	</RelativeLayout>

	</LinearLayout>
    
</ScrollView>

