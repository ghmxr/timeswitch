<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/activity_settings_basic_att"
                android:textColor="@color/color_activity_taskgui_att"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/settings_api"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_api_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_api_att"/>

                    <TextView
                        android:id="@+id/settings_api_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Android AlarmManager"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/drawable_arrow_right"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dividing_line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_service_type"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_service_type_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_service_type"/>

                    <TextView
                        android:id="@+id/settings_service_type_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_service_type_background"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/drawable_arrow_right"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dividing_line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_indicator"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_indicator_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_indicator_att"/>

                    <TextView
                        android:id="@+id/settings_indicator_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_indicator_att_att"/>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/settings_indicator_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:layout_marginRight="15dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dividing_line"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_autostart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_autostart_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_autostart_att"/>

                    <TextView
                        android:id="@+id/settings_autostart_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_autostart_att_att"/>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/settings_autostart_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:layout_marginRight="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dividing_line"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_color"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_color_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_color_att"/>

                    <TextView
                        android:id="@+id/settings_color_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/drawable_arrow_right"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dividing_line"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_log"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_log_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_log_att"/>

                    <TextView
                        android:id="@+id/settings_log_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_log_att_att"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/drawable_arrow_right"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/activity_settings_advanced_att"
                android:textColor="@color/color_activity_taskgui_att"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/settings_superuser"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_superuser_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_superuser_att"/>

                    <TextView
                        android:id="@+id/settings_superuser_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_superuser_att_att"/>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/settings_superuser_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/activity_settings_others"
                android:textColor="@color/color_activity_taskgui_att"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/settings_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_update_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_update"/>

                    <TextView
                        android:id="@+id/settings_update_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_update_att"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/drawable_arrow_right"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_dividing_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/settings_about_att"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_normal"
                        android:text="@string/activity_settings_about_att"/>

                    <TextView
                        android:id="@+id/settings_about_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/activity_settings_about_att_att"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/drawable_arrow_right"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>