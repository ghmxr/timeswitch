<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/item_task_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:src="@drawable/icon_repeat_weekloop"/>

    <TextView
        android:id="@+id/item_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_task_img"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="88D:88H:88M"/>

    <ImageView
        android:id="@+id/item_task_time_midline"
        android:layout_width="1px"
        android:layout_height="30dp"
        android:layout_marginLeft="130dp"
        android:layout_centerVertical="true"
        android:background="#dddddd"/>

    <RelativeLayout
        android:id="@+id/item_task_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_task_time_midline"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/item_task_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/item_task_actions_wifi_on"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_wifi_on"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_wifi_off"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_wifi_off"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_bluetooth_on"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_bluetooth_on"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_bluetooth_off"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_bluetooth_off"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_ring_vibrate"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_ring_vibrate"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_ring_off"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_ring_off"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_ring_normal"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_ring_normal"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_ring_volume"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_ring_volume"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_ring_selection"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_music"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_brightness_auto"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_brightness_auto"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_brightness_manual"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_brightness_medium"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_wallpaper"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_wallpaper"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_notification"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_notification"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_toast"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_toast"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_sms"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_sms"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_vibrate"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_ring_vibrate"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_net_on"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_cellular_on"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_net_off"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_cellular_off"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_gps_on"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_location_on"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_gps_off"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_location_off"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_airplane_mode_on"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_airplanemode_on"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_airplane_mode_off"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_airplanemode_off"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_device_reboot"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_reboot"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_device_shutdown"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_power"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_enable"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_mark"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/item_task_actions_disable"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:layout_margin="@dimen/size_item_icon_margin"
                android:src="@drawable/icon_cross"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/item_task_actions_more"
                android:layout_width="@dimen/size_item_icon"
                android:layout_height="@dimen/size_item_icon"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:text="..."
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_task_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_task_actions"
            android:layout_margin="2dp"
            android:textSize="12sp"/>


    </RelativeLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/item_task_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:focusable="false"/>

    <CheckBox
        android:id="@+id/item_task_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:clickable="false"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#dddddd"/>



</RelativeLayout>