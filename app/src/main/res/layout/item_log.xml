<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_log_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:text="@string/activity_log_trigger_time"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/item_log_time"
        android:layout_margin="3dp"
        android:layout_centerVertical="true"
        android:background="@color/color_dividing_line"/>

    <LinearLayout
        android:id="@+id/item_log_value_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_log_time"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/item_log_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:singleLine="true"
            android:text="@string/activity_log_trigger_value"/>
    </LinearLayout>


</RelativeLayout>